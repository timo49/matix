#!/run/current-system/sw/bin/bash

if [ "$1" = 'timo' ]; then
    echo "{
    theme = \""$2".nix\";
}" > ~/.modular-nixos-configuration/users/timo/themes/currentTheme.nix
fi
if [ "$1" = 'matteo' ]; then
    echo "{
    theme = \""$2".nix\";
}" > ~/.modular-nixos-configuration/users/matteo/themes/currentTheme.nix
fi
cd ~/.modular-nixos-configuration
sudo nixos-rebuild --impure switch --flake .
reboot
